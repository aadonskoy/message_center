<div class="flex flex-col w-full">
  <div class="w-full flex">
    <h1 class="mb-4 text-4xl font-extrabold leading-none">Messages</h1>
    <div class="text-right grow">
      <%= render "search_form" %>
    </div>
  </div>

  <div class="flex flex-col w-full">
    <div class="w-full">
    </div>
  </div>
  <div class="flex mb-4">
    <div class="flex-none w-100 mr-10 underline decoration-dotted">
      Phone Number
    </div>
    <div class="grow underline decoration-dotted">
      Message Text
    </div>
    <div class="flex-none w-30 underline decoration-dotted">
      Status
    </div>
  </div>
  <div class="w-full">
    <%= render @messages %>
  </div>
  <div class="text-center mb-10">
    <%= paginate @messages %>
  </div>
</div>
